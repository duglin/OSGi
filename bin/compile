#!/bin/sh
# bin/compile <build_dir> <cache_dir>

#fail fast
set -e
set -xo

echo "-----> Compiling OSGi app."

BIN_DIR=$(cd $(dirname $0); pwd)

# parse arguments
BUILD_DIR=$1
CACHE_DIR=$2

echo "-----> Bin dir - $BIN_DIR"
ls -la $BIN_DIR

echo "-----> equinox dir"
ls -la $BIN_DIR/../equinox3.9

echo "-----> Build dir - $BUILD_DIR"
ls -la $BUILD_DIR

echo "-----> Cache dir - $CACHE_DIR"

exit 0
